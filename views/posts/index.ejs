<%- include('../partials/header') %>

<table id="index">
   <thead>
     <tr>
       <th>Title</th>
       <th></th>
       <th>Comments</th>
       <th>Made By</th>
     </tr>
   </thead>
   <tbody>
     <!-- Write the line of EJS to iterate over movies using forEach -->
     <% posts.forEach(function(p) { %>
       <tr>
         <td><%= p.title %></td>
         <td><a href="/posts/<%= p._id %>" id="open">OPEN</a></td>
         <td><%= p.comments.length %></td>
         <td><%= p.user.name %></td>
       </tr>
     <!-- Close the forEach using EJS here -->
     <% }); %>
   </tbody>
</table>

<%- include('../partials/footer') %>


