<%- include('../partials/header') %>

<h2>Posts</h2>
 <table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Description</th>
       <th></th>
       <th>Comments</th>
       <th>Made By</th>
     </tr>
   </thead>
   <tbody>
     <!-- Write the line of EJS to iterate over movies using forEach -->
     <% posts.forEach(function(p) { %>
       <tr>
         <td><%= p.title %></td>
         <td><%= p.description %></td>
         <!-- <td><%= p.category %></td> -->
         <!-- <td><%= p.content %></td> -->
         <td><a href="/posts/<%= p._id %>">OPEN</a></td>
         <!-- finish the ternary expression to display
                       'Yes' or 'Nope' --> 
         <td> ## </td>
         <!-- How do I call the username again?  -->
         <td> Username</td>
       </tr>
     <!-- Close the forEach using EJS here -->
     <% }); %>
   </tbody>
 </table>

