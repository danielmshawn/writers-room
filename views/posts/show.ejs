<%- include('../partials/header') %>

<!-- Put title as H2 on top instead?  -->

<section id="show-page">

    <div>Title: </div>
    <div><%= post.title %></div>
    <div>By: </div>
    <div> Username here</div>
    <div>Description: </div>
    <div><%= post.description %></div>
    <div>Content: </div>
    <div><%= post.content %></div>
    
</section>

<br><br><h2>Comments</h2>
<form id="add-comment-form" method="POST"
  action="/posts/<%= post._id %>/comments">
  <label>Your Comment:</label>
  <textarea name="content"></textarea>
  <input type="submit" value="Add Comment">
</form>


<% if (post.comments.length) { %>
    
    <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Comment</th>
            <th>User</th>
          </tr>
        </thead>
        <tbody>
          <% post.comments.forEach(function(p) { %>
            <tr>
              <td><%= p.createdAt.toLocaleDateString() %></td>
              <td><%= p.content %></td>
              <td>Add user here</td>
            </tr>
          <% }); %>
        </tbody>
      </table>

<% } else { %>

<h5>No comments yet. Be the first!</h5>

<% } %>


<%- include('../partials/footer') %>